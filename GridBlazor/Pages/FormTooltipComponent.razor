@typeparam T

<label for="@Column.FieldName" class="@GridComponent.Grid.HtmlClass.FormLabel" @onmouseover="e => DisplayTooltip(Column.Name)" @onmouseout="e => HideTooltip(Column.Name)">@Column.Title</label>
@if (_isTooltipVisible)
{
    <div class="grid-tooltip">
        <div class="@GridComponent.Grid.HtmlClass.DropdownMenu grid-tooltip-dropdown" 
                style="display:block;@_customStyle1" 
                @ref="tooltip">
            <div class="grid-dropdown-arrow" style="@_customStyle2"></div>
            <div class="grid-dropdown-inner">
                <div class="grid-popup-widget">
                    <div class="grid-tooltip-body">
                        <label><b>@Column.TooltipValue</b></label>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
