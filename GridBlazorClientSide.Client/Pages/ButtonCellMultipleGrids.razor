@using GridBlazorClientSide.Shared.Models
@using GridShared.Columns
@implements ICustomGridComponent<Order>
@inject NavigationManager NavigationManager

<button class='@Program.HtmlClass.ButtonPrimary @Program.ButtonSmall' @onclick="MyClickHandler">Edit</button>

@code {
    [Parameter]
    public Order Item { get; set; }

    [Parameter]
    public IList<Func<object, Task>> Functions { get; set; }


    private async Task MyClickHandler(MouseEventArgs e)
    {
        await Functions[0]?.Invoke(Item);
    }
}